<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/my_back</item>
        <item name="homeAsUpIndicator">@drawable/my_back</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="@style/Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppCompatThemeWithNoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Transparent" parent="AppCompatThemeWithNoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/MyTitleStyle</item>
    </style>

    <style name="MyTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse"></style>

    <style name="ThemeDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LisPaddingStyle">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>


    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme_BLUE" parent="AppTheme">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme_BROWN" parent="AppTheme">
        <item name="colorAccent">@color/activated_brown</item>
    </style>

    <style name="AppTheme_CYAN" parent="AppTheme">
        <item name="colorAccent">@color/activated_cyan</item>
    </style>

    <style name="AppTheme_DRAK" parent="AppTheme">
        <item name="colorAccent">@color/activated_dark</item>
    </style>

    <style name="AppTheme_DEEP_PURPLE" parent="AppTheme">
        <item name="colorAccent">@color/activated_deep_purple</item>
    </style>

    <style name="AppTheme_GREEN" parent="AppTheme">
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="AppTheme_INDIGO" parent="AppTheme">
        <item name="colorAccent">@color/accent_indigo</item>
    </style>

    <style name="AppTheme_ORANGE" parent="AppTheme">
        <item name="colorAccent">@color/accent_orange</item>
    </style>

    <style name="AppTheme_RED" parent="AppTheme">
        <item name="colorAccent">@color/activated_red</item>
    </style>


</resources>
