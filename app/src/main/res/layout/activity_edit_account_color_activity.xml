<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/card3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_blue"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="0" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_brown"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="1" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_cyan"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_dark"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="3" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_deep_purple"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="4" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_green"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="5" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_indigo"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="6" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_orange"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="7" />

            <com.suda.jzapp.view.MyRoundColorView
                app:myRoundColor="@color/activated_red"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="switchColor"
                android:tag="8" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
