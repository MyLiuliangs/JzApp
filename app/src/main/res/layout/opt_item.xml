<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:minHeight="@dimen/drawer_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/drawer_icon_size"
        android:layout_height="@dimen/drawer_icon_size"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/drawer_icon_margin_left"
        android:layout_marginRight="@dimen/drawer_icon_margin_right" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/drawer_text_size" />

    <com.suda.jzapp.view.MyRoundColorView
        android:id="@+id/tip"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/tv_suda"
        android:visibility="gone"
        app:myRoundColor="@color/theme_red" />

</LinearLayout>