<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:onClick="selectAccount"
            android:text="现金"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_toRightOf="@+id/account"
            android:text="2016-02-18"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="备注"/>

    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/panel_color"
        android:background="@color/blue">

        <TableRow>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="1"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="2"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="3"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="del"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="4"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="5"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="6"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="+"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="7"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="8"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="9"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="-"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="C"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="0"/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:text="."/>
            <Button
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/panel_text_size"
                android:onClick="onClickPanel"
                android:id="@+id/ok"
                android:text="OK"/>
        </TableRow>
    </TableLayout>

</LinearLayout>